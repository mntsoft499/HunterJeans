<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBlue"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/SeaGreen"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:padding="2dp"
            android:src="@drawable/arrow_back"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/billing_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="Smart Card Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/smart_card_number"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Smard Card No."
            android:textColor="@color/black"
            android:textSize="18dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/popup_smart_card_number"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/smart_card_number"
            android:elevation="8dp"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:padding="8dp"
            android:text=""
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/popup_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/name"
            android:elevation="8dp"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="18sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/avail_points"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Available Points"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/popup_avail_points"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/avail_points"
            android:elevation="8dp"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="18sp"
            android:text="0"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/redeem_points"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Redeem Points"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/popup_redeem_points"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/redeem_points"
            android:background="@drawable/edge_round_corner"
            android:inputType="number"
            android:elevation="8dp"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:padding="8dp"
            android:text=""
            android:textSize="18sp" />
    </RelativeLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/popup_apply"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:background="@drawable/round_corner_purple"
        android:elevation="4dp"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:text="Apply"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        />
    <ProgressBar
        android:id="@+id/popup_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <RelativeLayout
        android:id="@+id/popup_otp_container"
        android:layout_below="@+id/formContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/otp_sent_to_mobile"
            android:textColor="@color/gray_dark"
            android:textSize="18sp"
            android:visibility="visible"
            />
        <EditText
            android:id="@+id/popup_otpVerification"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_corner_border"
            android:layout_below="@+id/txt_description"
            android:gravity="center"
            android:inputType="number"
            android:hint="@string/enter_6_digit_s_otp"
            android:maxLength="6"
            android:maxLines="1"
            android:visibility="visible"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/popup_otp_verify"
            android:elevation="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popup_otpVerification"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            android:background="@drawable/round_corner"
            android:paddingTop="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingBottom="12dp"
            android:layout_gravity="center"
            android:text="Verify OTP"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>