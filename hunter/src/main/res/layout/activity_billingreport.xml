<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/loginPageBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="fitXY"
        android:src="@drawable/login_background" />
    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:padding="2dp"
            android:src="@drawable/arrow_back"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/selector_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/title_bar"
        android:padding="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/branch_picker_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:weightSum="2">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_select_branch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/select_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:editable="true"
                    android:textColor="@color/colorAccent"
                    android:drawableLeft="@drawable/branch_location"
                    android:drawableStart="@drawable/branch_location"
                    android:drawablePadding="8dp"
                    android:textSize="16sp"
                    android:hint="Select Branch"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_filter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/select_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:focusable="false"
                    android:textColor="@color/colorAccent"
                    android:drawableLeft="@drawable/select_filter"
                    android:drawableStart="@drawable/select_filter"
                    android:drawablePadding="8dp"
                    android:textSize="16sp"
                    android:hint="Search type"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_picker_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:weightSum="2">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_start_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:clickable="true"
                    android:focusable="false"
                    android:editable="false"
                    android:textColor="@color/colorAccent"
                    android:drawableLeft="@drawable/date_picker"
                    android:drawableStart="@drawable/date_picker"
                    android:drawablePadding="8dp"
                    android:hint="Start date"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_end_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:focusable="false"
                    android:textColor="@color/colorAccent"
                    android:drawableLeft="@drawable/date_picker"
                    android:drawableStart="@drawable/date_picker"
                    android:drawablePadding="8dp"
                    android:hint="End date"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_cards_blue"
            android:text="Submit"
            android:padding="10dp"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/titles_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selector_container"
        android:background="@drawable/round_corner_border"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/product_wise_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:weightSum="3"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:textColor="@color/Green"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/barcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Barcode"
                android:textSize="16sp"
                android:textColor="@color/Green"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/product_wise_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="16sp"
                android:textColor="@color/Green"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/category_wise_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:weightSum="2"
            >
            <TextView
                android:id="@+id/category_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="16sp"
                android:textColor="@color/Green"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/category_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="16sp"
                android:textColor="@color/Green"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titles_container"
        android:divider="@android:color/transparent"
        android:layout_above="@+id/total_value_container"
        android:dividerHeight="15dp"
        android:padding="7dp"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/total_value_container"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/txt_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total No.of Bills"
            android:textColor="@color/showhide"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=":"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/totalbills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
