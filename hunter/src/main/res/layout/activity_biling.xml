<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_light"
    android:id="@+id/billing_layout"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightSeaGreen"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:padding="2dp"
            android:src="@drawable/arrow_back"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/billing_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="Payment Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/bill_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/mob_number"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Mob No"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/billing_mob_number"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/mob_number"
                    android:background="@drawable/edge_round_corner"
                    android:gravity="left|center_vertical"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:hint="Enter mobile No."
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/cash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.14"
                    android:gravity="start"
                    android:layout_marginRight="4dp"
                    android:text="Cash"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/billing_cash"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.32"
                    android:background="@drawable/edge_round_corner"
                    android:gravity="center"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:hint="0.00" />

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/card_check_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.22"
                    android:gravity="start|center"
                    android:text="Card"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/billing_card"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.32"
                    android:background="@drawable/edge_round_corner"
                    android:gravity="center"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:hint="0.00" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/swipe_machin_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="8dp">

                <TextView
                    android:id="@+id/swipe_machin"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Swipe Machine"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/swipe_machin"
                    android:background="@drawable/edge_round_corner"
                    >
                    <Spinner
                        android:id="@+id/billing_swipe_machin"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:visibility="gone"
                        android:padding="8dp" />
                </FrameLayout>
                <ProgressBar
                    android:id="@+id/swipe_machin_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/swipe_machin"
                    android:elevation="8dp"
                    android:padding="8dp"
                    android:background="@drawable/edge_round_corner"
                    android:visibility="visible"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/bajaj_card"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Bajaj Finserv"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/bajaj_finserv"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/edge_round_corner"
                    android:layout_toRightOf="@+id/bajaj_card"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:hint="0.00" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Payment (Rs.) "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/billing_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/payment"
                    android:elevation="8dp"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:text="0.00" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/return_change"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Return Change"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/billing_return_change"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/return_change"
                    android:elevation="8dp"
                    android:gravity="left|center_vertical"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:text="0.00" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/net_amount"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Net Amount (Rs.) "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/billing_net_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/net_amount"
                    android:elevation="8dp"
                    android:gravity="left|center_vertical"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="0.00"
                    android:textSize="16sp" />
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/any_discount_label"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Discount (Rs.)"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/any_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/edge_round_corner"
                    android:layout_toRightOf="@+id/any_discount_label"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:inputType="numberSigned"
                    android:hint="optional" />
            </RelativeLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/generate_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/round_corner_light_color"
                android:elevation="8dp"
                android:paddingLeft="24dp"
                android:paddingTop="12dp"
                android:paddingRight="24dp"
                android:paddingBottom="12dp"
                android:text="Generate Bill"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/progressbar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Please wait.. while generating bill"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Please don't refresh page or go back"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/status_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/billing_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="22sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/Green"
            android:textStyle="bold"
            android:padding="16dp"
            android:gravity="center"
            android:layout_above="@+id/goBack"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="@drawable/round_corner_border"

            />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Back"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_button"

            />

    </RelativeLayout>

</LinearLayout>